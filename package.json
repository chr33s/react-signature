{
  "name": "@chr33s/react-signature",
  "version": "1.0.0",
  "description": "React SVG Signature Component",
  "main": "index.js",
  "scripts": {
    "prebuild": "mkdir -p dist",
    "build": "browserify ./index.js > ./dist/signature.js",
    "postbuild": "npm run build:min && npm run build:gz",
    "build:min": "uglifyjs ./dist/signature.js -o ./dist/signature.min.js -cm",
    "build:gz": "gzip -c --best ./dist/signature.min.js > ./dist/signature.min.js.gz"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "react": "^15.5.4",
    "uglify-js": "^2.8.22"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "stage-0",
            "react"
          ]
        }
      ]
    ]
  },
  "author": "chris",
  "homepage": "https://github.com/chr33s/react-signature",
  "repository": {
    "type": "git",
    "url": "https://github.com/chr33s/react-signature.git"
  },
  "keywords": [
    "React",
    "SVG",
    "Signature"
  ],
  "license": "MIT"
}
